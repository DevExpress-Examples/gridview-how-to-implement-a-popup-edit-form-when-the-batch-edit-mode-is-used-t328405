@model Models.GridDataItem
@Html.DevExpress().FormLayout(settings => {
	settings.Name = "FormLayout";

	var groupItem = settings.Items.AddGroupItem(groupSettings => {
		groupSettings.Caption = "Group Caption";
		groupSettings.ShowCaption = DefaultBoolean.True;
		groupSettings.GroupBoxDecoration = GroupBoxDecoration.Default;
	});

	groupItem.SettingsItems.ShowCaption = DefaultBoolean.True;
	groupItem.SettingsItemCaptions.Location = LayoutItemCaptionLocation.Left;

	groupItem.SettingsItemHelpTexts.Position = HelpTextPosition.Auto;

	groupItem.Items.Add(m => m.C1, item => {
		item.HelpText = "Help text for C1";
	});
	groupItem.Items.Add(m => m.C2, item => {
		item.HelpText = "Help text for C2";
	});
	groupItem.Items.Add(m => m.C3, item => {
		item.HelpText = "Help text for C3";
	});
	groupItem.Items.Add(m => m.C4, item => {
		item.HelpText = "Help text for C4";
	});
	
	groupItem.Items.Add(item => {
		item.Name = "Save";
		item.ShowCaption = DefaultBoolean.False;
		item.NestedExtension().Button(s => {
			s.Name = "btnSave";
			s.ClientSideEvents.Click = "OnSave";
		});
	});
}).GetHtml()




